<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_pink"
    tools:context=".TeacherClassAssignmentPage">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/classAssignmentsRecyclerId"
        android:layout_width="295dp"
        android:layout_height="356dp"
        android:background="#8DFFFFFF"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/teacherAddNewAssignmentBtnId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/classAssignmentsTextView"
        android:layout_width="157dp"
        android:layout_height="33dp"
        android:text="  Assignments"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />


    <Button
        android:id="@+id/teacherAddNewAssignmentBtnId"
        android:layout_width="134dp"
        android:layout_height="78dp"
        android:text="Add/Update\n Assignment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageButton
        android:id="@+id/closeClassAssignmentsIconId"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        tools:ignore="SpeakableTextPresentCheck" />

    <TableLayout
        android:layout_width="409dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/teacherAddNewAssignmentBtnId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classAssignmentsRecyclerId">
        <TableRow>
            <TextView
                android:id="@+id/textView5"
                android:layout_column="1"
                android:text="Id:"
                android:textSize="18dp"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="493dp" />
            <EditText
                android:id="@+id/newAssignmentIdTextId"
                android:layout_column="2"
                android:autofillHints=""
                android:background="#A6FFFFFF"
                android:hint="Assignment Id"
                tools:layout_editor_absoluteX="181dp"
                tools:layout_editor_absoluteY="476dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textView6"
                android:layout_column="1"
                android:text="Name:"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintVertical_bias="0.187" />
            <EditText
                android:id="@+id/newAssignmentNameTextId"
                android:background="#A4FFFFFF"
                android:hint="Assignment Name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.724"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.794" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textView7"
                android:text="Question:"
                android:textSize="18sp"
                android:layout_column="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.105"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintVertical_bias="0.219" />

            <EditText
                android:id="@+id/newAssignmentQuestionTextId"
                android:layout_column="2"
                android:autofillHints=""
                android:background="#A4FFFFFF"
                android:hint="Assignment Question"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.724"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.889" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>