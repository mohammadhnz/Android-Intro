<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherClassAssignmentPage"
    android:background="@drawable/gradient_background_pink">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/classAssignmentsRecyclerId"
        android:layout_width="292dp"
        android:layout_height="279dp"
        android:background="#8DFFFFFF"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241" />

    <TextView
        android:id="@+id/classAssignmentsTextView"
        android:layout_width="157dp"
        android:layout_height="33dp"
        android:text="  Assignments"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <EditText
        android:id="@+id/newAssignmentIdTextId"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:background="#A6FFFFFF"
        android:hint="Assignment Id"
        android:fontFamily="serif"
        android:textColor="#651FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classAssignmentsRecyclerId"
        app:layout_constraintVertical_bias="0.062" />

    <EditText
        android:id="@+id/newAssignmentNameTextId"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="#A4FFFFFF"
        android:hint="Assignment Name"
        android:fontFamily="serif"
        android:textColor="#FF26007A"
        app:layout_constraintBottom_toTopOf="@+id/newAssignmentQuestionTextId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newAssignmentQuestionTextId"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:background="#A4FFFFFF"
        android:hint="Assignment Question"
        android:fontFamily="serif"
        android:shadowColor="#FF26007A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />

    <Button
        android:id="@+id/teacherAddNewAssignmentBtnId"
        android:layout_width="134dp"
        android:layout_height="78dp"
        android:layout_marginBottom="50dp"
        android:text="Add/Update\n Assignment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Id:"
        android:fontFamily="serif"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/newAssignmentIdTextId"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.598" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Name:"
        android:fontFamily="serif"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Question:"
        android:fontFamily="serif"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/newAssignmentQuestionTextId"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />

    <ImageButton
        android:id="@+id/closeClassAssignmentsIconId"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>